{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <form method="post">
        {{ form_row(form._token) }}
        <p>{{ form_label(form.email) }}</p>

        <div>{{ form_widget(form.email, {'attr': {'class': 'formInput'}}) }}</div>
        <br>
        {{ form_label(form.username) }}
        <br>
        {{ form_widget(form.username, {'attr': {'class': 'formInput'}}) }}
        <br><br>
        {{ form_label(form.password) }}
        <br>
        {{ form_widget(form.password, {'attr': {'class': 'formInput'}}) }}
        <br><br>
        <button type="reset">Reset</button>
        <button type="submit">Register</button>
    </form>
{% endblock %}